{
	"name": "tsqllint",
	"description": "A VS Code Extension For TSQLLint",
	"author": "Nathan Boyd",
	"license": "MIT",
	"version": "0.0.2",
	"publisher": "tsqllint",
	"main": "client/out/src/extension",
	"icon": "images/icon.png",
	"activationEvents": [
		"onLanguage:sql"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/tsqllint/tsqllint-vscode-extension"
	},
	"engines": {
		"vscode": "^1.15.0"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npm run compile:client && npm run compile:server",
		"watch": "npm run watch:client && npm run watch:server",
		"compile:server": "cd server && npm run compile",
		"compile:client": "cd client && npm run compile",
		"watch:client": "cd client && npm run watch",
		"watch:server": "cd server && npm run watch",
		"clean": "rm -rf ./client/node_modules ./client/out ./client/server ./server/node_modules"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^6.0.88",
		"typescript": "^2.5.2"
	}
}
