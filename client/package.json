{
	"name": "tsqllint-vs-extension-client",
	"description": "A VS Code Extension For TSQLLint",
	"author": "Nathan Boyd",
	"license": "MIT",
	"version": "0.0.2",
	"publisher": "TSQLLint",
	"repository": {
		"type": "git",
		"url": "https://github.com/tsqllint/tsqllint-vscode-extension"
	},
	"engines": {
		"vscode": "^1.16.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:sql"
	],
	"main": "./out/client/src/extension",
	"dependencies": {
		"decompress": "^4.2.0",
		"decompress-targz": "^4.1.1",
		"follow-redirects": "^1.2.6",
		"progress": "^2.0.0",
		"vscode": "^1.1.5",
		"vscode-languageclient": "^3.4.2"
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"build": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postbuild": "mkdir -p ../out/client/node_modules/ && cp -R node_modules ../out/client"
	}
}
